<div class="card-body text-left">
  <p class="card-text">
  <%= form_for poem do |f| %>
    <div class="field">
      <%= f.label :title %><br />
      <%= f.text_field :title, autofocus: true %>
    </div>
    <br />
    <div class="field">
      <%= f.label :date %><br />
      <%= f.date_field :date, autofocus: true %>
    </div>
    <br />
    <div class="field">
      <%= f.label :content %><br />
      <%= f.text_area :content, autofocus: true, class: "poem-content" %>
    </div>
    <br />
    <div class="field">
      <%= f.label :category_name %><br />
      <%= f.text_field :category_name %>
    </div>
    <br/>
    <%= f.hidden_field :user_id, :value => current_user.id %>
    <div class="actions">
      <%= f.submit "Submit", class: "btn btn-block btn-dark" %>
    </div>
  <% end %>
    </p>
  </div>
  <div class="card-footer text-muted">
    desktopoetry
  </div>
