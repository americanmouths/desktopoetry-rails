<div class="card text-center mx-auto mb-5" style="width: 40rem;">
  <div class="card-header">
    <h2><u>Write Something</u></h2>
  </div>
  <div class="card-body">
    <p class="card-text">
    <%= form_for @poem do |f| %>
      <div class="field">
        <%= f.label :title %><br />
        <%= f.text_field :title, autofocus: true %>
      </div>
      <br />
      <div class="field">
        <%= f.label :content %><br />
        <%= f.text_area :content, autofocus: true, class: "poem-content" %>
      </div>
      <br />
      <div class="field">
        <%= f.label :category_name %><br />
        <%= f.text_field :category_name %>
      </div>
      <br/>
      <%= f.hidden_field :user_id, :value => current_user.id %>
      <div class="actions">
        <%= f.submit "Submit", class: "btn btn-block btn-dark" %>
      </div>
    <% end %>
    </p>
  </div>
  <div class="card-footer text-muted">
    desktopoetry
  </div>
</div>
